<li id="micropost-<%= micropost.id %>">



<span class="user"><%= link_to micropost.person.name, micropost.person %></span>
<span class="content"><%= micropost.question %></span>
<span class="content"><%= micropost.answer %></span>
<span class="content"><%= micropost.value1 %></span>
<span class="content"><%= micropost.value2 %></span>
<span class="content"><%= micropost.value3 %></span>
<span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
</span>

      
<%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>

</li>